<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

         <servlet>
             <servlet-name>Home</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Home</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Home</servlet-name>
             <url-pattern></url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Login</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Login</servlet-class>
         </servlet>
             <servlet-mapping>
             <servlet-name>Login</servlet-name>
             <url-pattern>/login</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Login_Validation</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Login_Validation</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Login_Validation</servlet-name>
             <url-pattern>/login_validation</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Logout</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Logout</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Logout</servlet-name>
             <url-pattern>/logout</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Credit</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Credit</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Credit</servlet-name>
             <url-pattern>/credit</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Add_Credits_Validation</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Add_Credits_Validation</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Add_Credits_Validation</servlet-name>
             <url-pattern>/add_credits_validation</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>User</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.User</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>User</servlet-name>
             <url-pattern>/user</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Provider</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Provider</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Provider</servlet-name>
             <url-pattern>/provider/*</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Commodity</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Commodity</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Commodity</servlet-name>
             <url-pattern>/commodity</url-pattern>
         </servlet-mapping>

         <servlet>
             <servlet-name>Commodities</servlet-name>
             <servlet-class>com.example.baloot_shoppingcenter_phase2.servlets.Commodities</servlet-class>
         </servlet>
         <servlet-mapping>
             <servlet-name>Commodities</servlet-name>
             <url-pattern>/commodities/*</url-pattern>
         </servlet-mapping>

</web-app>